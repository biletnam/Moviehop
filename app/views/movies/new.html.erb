
<!-- movie data -->
<%= form_for @movie do |f| %>
  	
  	<%= f.label("Title") %>
  	<%= f.text_field :title %>

  	<%= f.label("Tagline") %>
  	<%= f.text_field :tagline %>

  	<%= f.label("Rating") %>
  	<%= f.select  :rating, ['G', 'PG', 'PG-13', 'R', 'NC-17'] %>

  	<%= f.label 'Released On' %>
  	<%= f.date_select :release_date %>



  	<!-- start elements of @movie -->
	<!-- picture 1 data -->
	<%= f.fields_for @picture1 do |p| %>
	  	
	  	<%= p.label("Picture 1 URL") %>
	  	<%= p.url_field :address %>
 	<% end %>

	<!-- picture 2 data -->
	<%= f.fields_for @picture2 do |p2| %>
	  	
	  	<%= p2.label("Picture 2 URL") %>
	  	<%= p2.url_field :address %>
  	<% end %>
	

	<!-- trailer data -->
	<%= f.fields_for @trailer do |t| %>
	  	
	  	<%= t.label("Trailer Youtube ID") %>
	  	<%= t.text_field :address  %>
  	<% end %>

  	<br>
	<!-- submit the changes -->
	<%= f.submit "Save Changes" %>	
	<br><br><br>
<% end %>